@model IEnumerable<PralnaDemo.Models.ServiceToClient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-default"})

    @Html.ActionLink("Згенерувати послуги", "CreateRandomServices", null, new {@class="btn btn-success"})

</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UniqueKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueSet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCallbackAllowed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientFeedback)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assigned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Started)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker.AspNetUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UniqueKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueSet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCallbackAllowed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientFeedback)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assigned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Started)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Finished)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.AspNetUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
